<style>
  .holler {
    box-sizing: border-box;
    color: honeydew;
    z-index: 10;
    position: relative;
    text-align: center;
    width: 100%;
    height: 100%;
    padding: 2vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  #holler-input {
    background: none;
    box-shadow: none;
    border: none;
    color: honeydew;
    text-align: center;
    padding: 1vw;
    font-size: 1.1rem;
    width: 100%;
    box-sizing: border-box;
  }

  #holler-input:focus {
    outline: none;
  }
</style>
<section class="holler">
  <form id="holler-form">
    <input
      id="holler-input"
      type="text"
      name="words"
      autocomplete="off"
      value="Type something and hit enter!"
    />
  </form>
</section>
<script>
  const form = document.getElementById("holler-form");
  const input = document.getElementById("holler-input");
  let words;

  input.addEventListener("change", function (e) {
    words = e.target.value;
  });

  input.addEventListener("focus", function (e) {
    e.target.select();
  });

  form.addEventListener("submit", function (e) {
    e.preventDefault();
    input.value = "";
    words = "";
  });
</script>
